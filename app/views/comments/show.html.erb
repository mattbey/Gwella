<div class="page-header">
  <h3>Thanks for commenting on this video!</h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <input type="hidden" value"= <%= @comment.video_id %>">

      <input type="hidden" value="<%= @comment.user_id %>">

      <dt>Your comment</dt>
      <dd><%= @comment.comment %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/comments" class="btn btn-primary">
        Back
      </a>
      <a href="/comments/<%= @comment.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_comment/<%= @comment.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

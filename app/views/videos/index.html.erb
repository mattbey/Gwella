
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Title</th>
        <th>Url</th>
        <th>Description</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @videos.each do |video| %>
      <tr>
        <td><%= video.title %></td>
        <td><%= video.url %></td>
        <td><%= video.description %></td>
        <td><%= video.user_id %></td>
        <td>
          <a href="/videos/<%= video.id %>" class="btn btn-primary">Show</a>
          <a href="/videos/<%= video.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_video/<%= video.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= link_to video.user.username, "/users/#{video.user.id}" %>
          <small>
            <%= time_ago_in_words(video.created_at) %> ago
          </small>
        </h3>
      </div>

      <div class="panel-body">
        <a href="/video/<%= video.id %>">
          <img src="<%= video.image %>" class="img-responsive">
        </a>

        <p>
          <% favorite = favorite.find_by(:video_id => video.id, :user_id => current_user.id) %>
          <% if favorite.present? %>
            <a href="/delete_favorite/<%= favorite.id %>" class="btn btn-link">
              <i class="fa fa-heart"></i>
            </a>
            <% if video.fans.any? %>
            <%= video.fans.pluck(:username).to_sentence %>
            <%= video.fans.many? ? "favorite" : "favorites" %>
            this
            <% end %>
          <% else %>
            <form action="/create_favorite" method="post">
              <!-- Hidden input for authenticity token to protect from forgery -->
              <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

              <input type="hidden" name="video_id" value="<%= video.id %>">

              <input type="hidden" name="user_id" value="<%= current_user.id %>">

              <button class="btn btn-link">
                <i class="fa fa-heart-o"></i>
              </button>

              <% if video.fans.any? %>
              <%= video.fans.pluck(:username).to_sentence %>
              <%= video.fans.many? ? "favorite" : "favorites" %>
              this
              <% else %>
              <small class="text-muted">be the first to favorite this</small>
              <% end %>
            </form>
          <% end %>
        </p>

        <ul class="media-list">

          <% if video.caption.present? %>
          <li class="media">
            <div class="media-body">
              <h6 class="media-heading">
                <%= link_to video.user.username, "/users/#{video.user.id}" %>
                <small>
                  <%= time_ago_in_words(video.created_at) %> ago
                </small>
              </h6>
              <%= video.caption %>
            </div>
          </li>
          <% end %>

          <% video.comments.each do |comment| %>
          <li class="media">
            <div class="media-body">
              <h6 class="media-heading">
                <%= link_to comment.user.username, "/users/#{comment.user.id}" %>
                <small>
                  <%= time_ago_in_words(comment.created_at) %> ago
                  <% if comment.user == current_user %>
                    <a href="/delete_comment/<%= comment.id %>">
                      <i class="fa fa-trash"></i>
                    </a>
                  <% end %>
                </small>
              </h6>
              <%= comment.body %>
            </div>
          </li>
          <% end %>

          <li class="media">
            <div class="media-body">
              <form action="/create_comment" method="post">
                <!-- Hidden input for authenticity token to protect from forgery -->
                <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

                <input type="hidden" name="video_id" value="<%= video.id %>">

                <input type="hidden" name="user_id" value="<%= current_user.id %>">

                <!-- Label and input for body -->
                <div class="form-group">
                  <label for="body" class="sr-only">
                    Body
                  </label>

                  <input type="text" id="body" name="body" placeholder="Add a comment..." class="form-control" required>
                </div>
              </form>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

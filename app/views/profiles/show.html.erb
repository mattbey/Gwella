<div class="page-header">
  <h3><%= current_user.username %>'s Profile!</h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Username</dt>
      <dd><%= @profile.username %></dd>

      <dt>City</dt>
      <dd><%= @profile.city %></dd>

      <dt>State</dt>
      <dd><%= @profile.state %></dd>

      <dt>Country</dt>
      <dd><%= @profile.country %></dd>

      <dt>Interests</dt>
      <dd><%= @profile.interests %></dd>

      <input type="hidden"  value="<%= @profile.user_id %>">


    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/profiles" class="btn btn-primary">
        Back
      </a>
      <a href="/profiles/<%= @profile.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_profile/<%= @profile.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

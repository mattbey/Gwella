<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="jumbotron">
      <h3>
        <%= @user.username %>
      </h3>

      <div class="row">

        <div class="col-md-3">
          <p class="lead">
            <%= @user.videos.count %> posts
          </p>
        </div>

        <div class="col-md-3">
          <p class="lead">
            <%= @user.favorites.count %> followers
          </p>
        </div>

        <div class="col-md-3">
          <p class="lead">
            <%= @user.favorites.count %> following
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<% if @user == current_user %>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <a href="/videos/new" class="btn btn-default btn-block">
      <i class="fa fa-plus"></i>
    </a>

    <hr>
  </div>
</div>
<% end %>

<%= render @user.videos %>
